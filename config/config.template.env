# =============================================================================
# BIOTECH M&A PREDICTOR - CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# DATABASE
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=biotech_ma
POSTGRES_USER=
POSTGRES_PASSWORD=

TIMESCALE_HOST=localhost
TIMESCALE_PORT=5433
TIMESCALE_DB=biotech_timeseries

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# EVENT BUS
# -----------------------------------------------------------------------------
# Choose one: rabbitmq, kafka, or eventbridge
EVENT_BUS_TYPE=rabbitmq

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=
RABBITMQ_PASSWORD=
RABBITMQ_VHOST=biotech

# AWS EventBridge (alternative)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
EVENTBRIDGE_BUS_NAME=biotech-ma-events

# -----------------------------------------------------------------------------
# DATA SOURCE APIs
# -----------------------------------------------------------------------------
# SEC EDGAR
SEC_USER_AGENT=YourCompany contact@yourcompany.com

# FDA
FDA_API_KEY=

# Financial Data
POLYGON_API_KEY=
ALPHA_VANTAGE_API_KEY=
FINNHUB_API_KEY=

# News/PR
NEWSAPI_KEY=
BENZINGA_API_KEY=

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES
# -----------------------------------------------------------------------------
# OpenAI (for NLP analysis)
OPENAI_API_KEY=

# Anthropic (for analysis)
ANTHROPIC_API_KEY=

# Google (Gemini for analysis)
GOOGLE_API_KEY=

# -----------------------------------------------------------------------------
# NOTIFICATIONS
# -----------------------------------------------------------------------------
# Email (SendGrid)
SENDGRID_API_KEY=
FROM_EMAIL=reports@yourcompany.com

# Slack
SLACK_BOT_TOKEN=
SLACK_WEBHOOK_URL=

# -----------------------------------------------------------------------------
# REPORT STORAGE
# -----------------------------------------------------------------------------
# S3
S3_BUCKET_NAME=biotech-ma-reports
S3_REGION=us-east-1

# -----------------------------------------------------------------------------
# SCORING ENGINE
# -----------------------------------------------------------------------------
# Alert thresholds
MA_SCORE_ALERT_THRESHOLD=75
MA_SCORE_CHANGE_ALERT=10
WATCHLIST_MIN_SCORE=50

# Scoring weights (must sum to 1.0)
WEIGHT_PIPELINE=0.25
WEIGHT_PATENT=0.15
WEIGHT_FINANCIAL=0.20
WEIGHT_INSIDER=0.15
WEIGHT_STRATEGIC_FIT=0.15
WEIGHT_REGULATORY=0.10

# -----------------------------------------------------------------------------
# SCHEDULER
# -----------------------------------------------------------------------------
# Cron expressions
DAILY_DIGEST_CRON=0 6 * * *
WEEKLY_REPORT_CRON=0 8 * * 1
DATA_REFRESH_INTERVAL_MINUTES=15

# -----------------------------------------------------------------------------
# API SERVER
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=

# -----------------------------------------------------------------------------
# LOGGING
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
